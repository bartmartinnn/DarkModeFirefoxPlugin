{
  "manifest_version": 3,
  "name": "Universal Dark Mode",
  "version": "1.0",
  "description": "Turns any website into dark mode.",
  "permissions": ["scripting", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Dark Mode"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
} 